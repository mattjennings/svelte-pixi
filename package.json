{
  "name": "svelte-pixi",
  "version": "8.0.0-next.0",
  "description": "Create PixiJS apps with Svelte",
  "repository": "https://github.com/mattjennings/svelte-pixi",
  "author": "Matt Jennings",
  "license": "MIT",
  "scripts": {
    "build": "npm run package",
    "package": "svelte-package",
    "package:watch": "svelte-package --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "validate": "svelte-check --tsconfig ./tsconfig.json --threshold error --ignore \"dist\"",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm run build",
    "lint-staged": "lint-staged",
    "lint": "eslint .",
    "prettier": "prettier --ignore-path .eslintignore . --check",
    "format": "prettier --ignore-path .eslintignore . --write",
    "test": "vitest",
    "test:browser": "vitest --workspace=vitest.workspace.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/browser": "^2.1.8",
    "autoprefixer": "^10.4.4",
    "css-tree": "^2.3.1",
    "eslint": "^9.17.0",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.14.0",
    "happy-dom": "^16.0.1",
    "husky": "^7.0.0",
    "lint-staged": "^15.1.0",
    "pixi.js": "^8.6.5",
    "playwright": "^1.49.1",
    "prettier": "^3.4.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.3.2",
    "sveld": "^0.22.0",
    "svelte": "^5.15.0",
    "svelte-check": "^4.1.0",
    "svelte-preprocess": "^6.0.0",
    "svelte2tsx": "^0.7.31",
    "tslib": "^2.3.1",
    "typescript": "^5.7.0",
    "vite": "^0.0.1-next.0",
    "vitest": "^2.1.8",
    "vitest-browser-svelte": "^0.0.1"
  },
  "peerDependencies": {
    "pixi.js": ">=8.6.5",
    "svelte": ">=4.0.0 || >=5.0.0"
  },
  "main": "./dist/svelte-5/index.js",
  "svelte": "./dist/svelte-5/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/svelte-5/index.d.ts",
      "import": "./dist/svelte-5/index.js",
      "svelte": "./dist/svelte-5/index.js",
      "default": "./dist/svelte-5/index.js"
    },
    "./svelte-4": {
      "types": "./dist/svelte-4/index.d.ts",
      "import": "./dist/svelte-4/index.js",
      "svelte": "./dist/svelte-4/index.js",
      "default": "./dist/svelte-4/index.js"
    }
  },
  "typesVersions": {
    ">=4.0": {
      "*": [
        "dist/*"
      ]
    }
  }
}
